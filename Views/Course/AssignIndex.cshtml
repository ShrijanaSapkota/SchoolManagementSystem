@*@model  DBSchoolManagementSystem.Models.AssignInstructor*@
@using DBSchoolManagementSystem.Models
@model List<AssignInstructorVm>

@{
    ViewBag.Title = "AssignIndex";
}
<p>
    @Html.ActionLink("Assign Instructor", "AssignInstructor")
</p>

<h2>AssignIndex</h2>

<table>
    <tr>
        <th>Instructor Name</th>
        <th>Department Name</th>
        <th>Course Name</th>
        <th>Semester Name</th>


        <th>Action</th>
    </tr>
    @foreach (var item in Model)

    {
        <tr>
            <td>
                @item.InstructorName
            </td>
            <td>
                @item.DepartmenttName
            </td>
            <td>
                @item.CourseName
            </td>



            <td>
                @item.SemesterName
            </td>




            <td>
                @if (User.IsInRole("Admin"))
                {
                    @Html.ActionLink("Edit", "Edit", new { id = item.Courseid }, new { style = "color: blue; margin-right: 5px;" })
                }
                @Html.ActionLink("Details", "Details", new { id = item.Courseid }, new { style = "color: green; margin-right: 5px;" })
                @if (User.IsInRole("Admin"))
                {
                    @Html.ActionLink("Delete", "Delete", new { id = item.Courseid }, new { style = "color: red; margin-right: 5px;" })}
            </td>
        </tr>
    }
    </table>

