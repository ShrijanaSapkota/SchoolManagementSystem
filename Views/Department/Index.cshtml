@model DBSchoolManagementSystem.Models.Department




@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Department</h2>

@if (User.IsInRole("Admin"))
{
    <p>
        @Html.ActionLink("Add Department", "Create", null, new { @class = "btn btn-primary custom-btn" })
    </p>
}

<table class=" table">
    <tr class="text-center bg-dark text-light">
        <th>Department Id </th>
        <th>Department Name </th>
        <th>Action</th>






    </tr>

    @foreach (var item in Model.DepartmentList)

    {
        <tr class="text-center bg-light text-dark">

            <td>
                @item.DepartmentId
            </td>
            <td>
                @item.DepartmenttName
            </td>




            <td>
                @if (User.IsInRole("Admin"))
                {
                @Html.ActionLink("Edit", "Edit", new { id = item.DepartmentId }, new { @class = "btn btn-primary", @style = "color:white" })}
                @Html.ActionLink("Details", "Details", new { id = item.DepartmentId }, new { @class = "btn btn-success", @style = "color:white" })
                @if (User.IsInRole("Admin"))
                {
                @Html.ActionLink("Delete", "Delete", new { id = item.DepartmentId }, new { @class = "btn btn-danger", @style = "color:white" })}
            </td>
        </tr>

    }
</table>

