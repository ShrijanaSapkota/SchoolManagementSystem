@using DBSchoolManagementSystem.Models
@model SearchViewModel

@{
    var studentlistdropdown = ViewBag.Student as List<Student>;
    var instructorlistdropdown = ViewBag.Instructor as List<Instructor>;
    var studentlist = ViewBag.Students as List<Student>;
    var instructorlist = ViewBag.Instructors as List<Instructor>;

}


<h2>Search Results</h2>




<p>Showing results for: <strong>@Html.DisplayFor(model => model.searchQuery)</strong></p>
@if (instructorlist.Any())
{

    <h3>Instructors</h3>
    <table>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Courses</th>

        </tr>

        @foreach (var instructor in instructorlist)
        {

            <tr>
                <td>@instructor.FirstName</td>
                <td>@instructor.LastName</td>
                <td>@instructor.Email</td>
                <td>@instructor.Courses</td>

            </tr>




        }

    </table>

}
else
{
    <p>No result found.</p>
}

@if (studentlist.Any())
{
    <h3>Students</h3>
    <table>
        <tr>
            <th>FullName</th>
            <th>Email</th>
            <th>Address</th>
            <th>Contactno</th>
            <th>FullName</th>

        </tr>


        @foreach (var student in studentlist)
        {

            <tr>
                <td>@student.FullName</td>
                <td>@student.Email</td>
                <td>@student.Address</td>
                <td>@student.Contactno</td>
                <td>@student.EnrollmentDate</td>
            </tr>


            @*<a href="@Url.Action("Details", "Student", new { id = student.StudentId })">@student.FullName</a>*@

        }
    </table>

    }
    else
    {
    <p>No result found.</p>
    }
<style>
    body {
        font-family: Arial, sans-serif;
    }

    h2 {
        margin-top: 20px;
    }

    /* Table styles */
    table {
        border-collapse: collapse;
        width: 100%;
        margin-bottom: 20px;
    }

    th, td {
        border: 1px solid #ddd;
        padding: 8px;
        text-align: left;
    }

    th {
        background-color: #f2f2f2;
    }

    tr:nth-child(even) {
        background-color: #f9f9f9;
    }

    /* Heading styles */
    h3 {
        margin-top: 20px;
    }

    /* Strong text styles */
    strong {
        font-weight: bold;
    }

    /* Anchor styles */
    a {
        color: #007bff;
        text-decoration: none;
    }

        a:hover {
            text-decoration: underline;
        }
</style>





