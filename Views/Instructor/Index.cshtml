@model List<DBSchoolManagementSystem.Models.Instructor>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Instructor</h2>
@if (User.IsInRole("Admin"))
{
    <p>
        @Html.ActionLink("Add Instructor", "Create", null, new { @class = "btn btn-primary custom-btn" })
    </p>
}



<table class="table">
    <tr class="text-center bg-dark text-light">
        <th>Instructor Id</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email</th>
        <th>Courses</th>
        <th>Post</th>
        <th>Department Name</th>
        <th>Course Name</th>
        
        <th>Action</th>
    </tr>



    @foreach (var item in Model)
    {
        <tr alignstyle="margin:0 auto" class="text-center bg-light text-dark">

            <td>@item.Instructorid</td>
            <td>@item.FirstName</td>
            <td>@item.LastName</td>
            <td>@item.Email</td>
            <td>@item.Courses</td>
            <td>@CommonUtilities.GetTypeNameFromEmployeeId(item.TypeId)</td>
            <td>@CommonUtilities.GetDepartmentNameFromDepartmentId(item.DepartmentId)</td>
            <td>@CommonUtilities.GetCourseNameFromCourseId(item.Courseid)</td>
            





            <td>
                @if (User.IsInRole("Admin"))
                {
                    @Html.ActionLink("Edit", "Edit", new { id = item.Instructorid }, new { @class = "btn btn-primary", @style = "color:white" })}
                @Html.ActionLink("Details", "Details", new { id = item.Instructorid }, new { @class = "btn btn-success", @style = "color:white" })
                @if (User.IsInRole("Admin"))
                {
                    @Html.ActionLink("Delete", "Delete", new { id = item.Instructorid }, new { @class = "btn btn-danger", @style = "color:white" })
                }
            </td>
        </tr>
    }
</table>






@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
