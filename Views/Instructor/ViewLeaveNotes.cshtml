@model List<DBSchoolManagementSystem.Models.LeaveNote>

@{
    ViewBag.Title = "View Leave Notes";
}

<h2>Leave Notes</h2>

@if (Model.Count > 0)
{
    <table class="table">
        <tr>
            <th>Student ID</th>
            <th>Instructor ID</th>
            <th>Note</th>
            <th>Date</th>
        </tr>
        @foreach (var leaveNote in Model)
        {
            <tr>
                <td>@leaveNote.StudentId</td>
                <td>@leaveNote.Instructorid</td>
                <td>@leaveNote.Note</td>
                <td>@leaveNote.Date</td>
            </tr>
        }
    </table>
}
else
{
    <p>No leave notes found.</p>
}
