@model DBSchoolManagementSystem.Models.Student

@{
    ViewBag.Title = "Delete";
}

<style>
    .container {
        max-width: 500px;
        margin: 0 auto;
        padding: 20px;
    }

    h2 {
        color: #333;
    }

    h3 {
        color: #666;
        margin-bottom: 10px;
    }

    h4 {
        color: #333;
        margin-top: 20px;
    }

    hr {
        border-top: 1px solid #ccc;
        margin: 20px 0;
    }

    dl {
        margin-bottom: 20px;
    }

    dt {
        float: left;
        width: 150px;
        clear: left;
        font-weight: bold;
    }

    dd {
        margin-left: 170px;
        margin-bottom: 10px;
    }

    .form-actions {
        margin-top: 20px;
    }

    .btn {
        display: inline-block;
        padding: 8px 16px;
        text-align: center;
        text-decoration: none;
        background-color: #007bff;
        color: white;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }

    .btn-secondary {
        background-color: #6c757d;
    }
</style>

<div class="container">
    <h2>Delete</h2>

    <h3>Are you sure you want to delete this?</h3>

    <div>
        <h4>Student</h4>
        <hr />

        <dl>
            <dt>@Html.DisplayNameFor(model => model.FullName)</dt>
            <dd>@Html.DisplayFor(model => model.FullName)</dd>

            <dt>@Html.DisplayNameFor(model => model.Address)</dt>
            <dd>@Html.DisplayFor(model => model.Address)</dd>

            <dt>@Html.DisplayNameFor(model => model.Email)</dt>
            <dd>@Html.DisplayFor(model => model.Email)</dd>

            <dt>@Html.DisplayNameFor(model => model.Contactno)</dt>
            <dd>@Html.DisplayFor(model => model.Contactno)</dd>

            <dt>@Html.DisplayNameFor(model => model.Gender)</dt>
            <dd>
                @if (Model.Gender == "Male")
                {
                    <span>Male</span>
                }
                else if (Model.Gender == "Female")
                {
                    <span>Female</span>
                }
            </dd>

            <dt>@Html.DisplayNameFor(model => model.EnrollmentDate)</dt>
            <dd>@Html.DisplayFor(model => model.EnrollmentDate)</dd>

             <dt>@Html.DisplayNameFor(model => model.Course)</dt>
            <dd>
                @Html.DisplayFor(model => model.TypeId)
            </dd>
        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions">
                <input type="submit" value="Delete" class="btn btn-danger" />
                @Html.ActionLink("Back to List", "Index", new { id = Model.StudentId }, new { @class = "btn btn-secondary" })
            </div>
        }
    </div>
</div>

